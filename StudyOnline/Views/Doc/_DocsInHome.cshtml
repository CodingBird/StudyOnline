@using Model
@using StudyOnline.Infrastructure
@model IEnumerable <DocData>

<div class="tbox">
    <div class="utitle">
        <div class="utitlei">
            <div class="tabTitle"><span class="utabTitle">@ViewBag.Title</span></div>
        </div>
    </div>
    
    <div class="tabContent">
        <div class="list-main clear" style="padding:0 15px 8px;">
            <ul>
            @foreach (var doc in Model)
            {
                <li>
                    <span class="date">@doc.UploadTime.ToString("MM-dd")</span>
                    @Ajax.ActionLink(@Html.ShortenText(doc.Name,16), "Detail", new { docId = doc.Id }, new AjaxOptions
                   {
                       InsertionMode = InsertionMode.Replace,
                       UpdateTargetId = "info_show_place",
                       HttpMethod = "GET",
                       OnSuccess = "bindEventAfterGetDocDetail"
                   }, new { @class = "docDetail" })
                </li>
            }
            </ul>
        </div>
    </div>

</div>
