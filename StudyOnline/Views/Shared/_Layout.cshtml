<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>党员在线学习系统_@ViewBag.Title</title>
    <link type="text/css" rel="stylesheet" href="@Url.Content("~/Content/style.min.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/bootstrap/css/bootstrap.css")" title="style"  media="screen"/>
    
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="page">
        <div id="header_front" style="position:relative;">
            
            <span class="login_info">
                当前用户:<a class="username_info" href="javascript:void(0)">@User.Identity.Name</a> &nbsp &nbsp &nbsp
                @Html.ActionLink("退出", "SignOut", "Account")
            </span>
        </div>
        
        <div id="main" class="container-fluid">
            <div id="second_bar">
                <div class="user">
                    
                </div>
                <div class="breadcrumbs_container">
                    <div class="breadcrumbs">
                        <a href="@ViewBag.ParentUrl">@ViewBag.ParentNav</a>
                        <span class="breadcrumb_divider"></span>
                        <a href="@ViewBag.ChildUrl">@ViewBag.ChildNav</a>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span2" id="nav">
                    <ul class="leftnav">
                        <li>@Html.ActionLink("网站首页","index","home")</li>
                        <li class="toplabel">在线学习资源</li>
                        
                        <li>
                            @Html.ActionLink("视频资源", "List", "Video", new { area=""},null)
                            <span></span>
                            <div class="sub_nav undis" id="sub_nav1">
                                <ul>@Html.Action("Menu","VideoCategory")</ul>
                            </div>
                            
                        </li>
                        <li>
                            @Html.ActionLink("知识文库", "List","Doc")
                            <span></span>
                            <div class="sub_nav undis" id="sub_nav2">
                                <ul>@{Html.RenderAction("Menu", "DocCategory");}</ul>
                            </div>
                            
                        </li>
                        <li class="toplabel">个人信息</li>
                        <li>@Html.ActionLink("我的学习记录","List","Record")</li>
                        <li>@Html.ActionLink("学习记录统计", "Statistics", "Record")</li>
                    </ul>
                </div>
                <div class="span10" id="right">
                  <!--Body content-->
                  @RenderBody()
                </div>
            </div>
        </div>
           
        <div id="footer" style="clear:both;text-align:center;">
            南大金陵学院 <br />
           @* @{Html.RenderAction("RenderTotalLoginCount", "Account");}*@
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script type="text/javascript" src="@Url.Content("~/Scripts/ajaxpage.js")"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
